<div class="row">
  <div class="span11 center">
    <div class="main-content">
      <div class="header">
        <% if current_user.present? && current_user.admin? %>
        <h2>
          <%= link_to "Add Category", new_category_path, class:'btn btn-success pull-right'%>
        </h2>
        <% end %>
        <%= content_tag(:h1, "All Categories") %>
        <ul class="categories">
          <% @categories.each do |category| %>
            <li class="category-listing">
              <%= content_tag(:h1, link_to(category.name,category))%>
              <p><%= category.description %></p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
